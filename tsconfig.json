{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true
  }
}
